<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtSearchQueryFish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fish To Query"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search!" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/edtSearchQueryAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Advanced Search: bait, lat:long, weather, etc" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced Search!" />

        <ListView
            android:id="@+id/lvQueryInfos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fishbackgroud" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>